<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/btnShowBack"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Show Back"/>

    <Button
        android:id="@+id/btnBackToRoot"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Go back to root"/>

    <EditText
        android:id="@+id/editGoBackTo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="Go back to X backController"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnGoBackTo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Go back to"/>

</LinearLayout>